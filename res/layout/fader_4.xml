<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wooden"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"  >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <de.steinberg.usabilitylab.dspinterfaces.Fader
            android:id="@+id/fader1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@color/interface_bg"
            custom:channelFader="3"
            custom:controllerNumber="9" 
            android:tag="0"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/parameter_margin_top"
            android:text="@string/parameter1"
            android:textColor="@color/white"
            android:textSize="@dimen/parameter_textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="vertical" >

        <de.steinberg.usabilitylab.dspinterfaces.Fader
            android:id="@+id/fader2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@color/interface_bg"
            custom:channelFader="3"
            custom:controllerNumber="10" 
            android:tag="1"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/parameter_margin_top"
            android:text="@string/parameter2"
            android:textColor="@color/white"
            android:textSize="@dimen/parameter_textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="vertical" >

        <de.steinberg.usabilitylab.dspinterfaces.Fader
            android:id="@+id/fader3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@color/interface_bg"
            custom:channelFader="3"
            custom:controllerNumber="11" 
            android:tag="2"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/parameter_margin_top"
            android:text="@string/parameter3"
            android:textColor="@color/white"
            android:textSize="@dimen/parameter_textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="vertical" >

        <de.steinberg.usabilitylab.dspinterfaces.Fader
            android:id="@+id/fader4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@color/interface_bg"
            custom:channelFader="3"
            custom:controllerNumber="12" 
            android:tag="3"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/parameter_margin_top"
            android:text="@string/parameter4"
            android:textColor="@color/white"
            android:textSize="@dimen/parameter_textsize" />
    </LinearLayout>

</LinearLayout>