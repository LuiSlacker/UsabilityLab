<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ViewFlipper
        android:id="@+id/viewFlipper1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <de.steinberg.usabilitylab.Fader
                android:id="@+id/fader1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/list_background"
                custom:channelFader="3"
                custom:controllerNumber="9" />

            <de.steinberg.usabilitylab.Fader
                android:id="@+id/fader2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dip"
                android:layout_weight="1"
                android:background="@color/list_background"
                custom:channelFader="3"
                custom:controllerNumber="10" />

            <de.steinberg.usabilitylab.Fader
                android:id="@+id/fader3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dip"
                android:layout_weight="1"
                android:background="@color/list_background"
                custom:channelFader="3"
                custom:controllerNumber="11" />

            <de.steinberg.usabilitylab.Fader
                android:id="@+id/fader4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dip"
                android:layout_weight="1"
                android:background="@color/list_background"
                custom:channelFader="3"
                custom:controllerNumber="12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <de.steinberg.usabilitylab.Pad1
                android:id="@+id/pad1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/list_background"
                custom:acceleration="false"
                custom:channel="3"
                custom:controllerNumber_x="9"
                custom:controllerNumber_y="10"
                custom:drawbackground="false" />

            <de.steinberg.usabilitylab.Pad1
                android:id="@+id/pad2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@color/list_background"
                custom:acceleration="false"
                custom:channel="3"
                custom:controllerNumber_x="11"
                custom:controllerNumber_y="12"
                custom:drawbackground="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <de.steinberg.usabilitylab.Fader
                android:id="@+id/fader5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/list_background"
                custom:channelFader="3"
                custom:controllerNumber="9" />

            <de.steinberg.usabilitylab.Pad1
                android:id="@+id/pad3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:background="@color/list_background"
                custom:acceleration="false"
                custom:channel="3"
                custom:controllerNumber_x="10"
                custom:controllerNumber_y="11"
                custom:controllerNumber_z="12"
                custom:drawbackground="false" />
        </LinearLayout>
    </ViewFlipper>

</LinearLayout>